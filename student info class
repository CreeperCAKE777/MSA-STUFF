
#Create student Class with these attributes
class Student:

    def __init__(self, fname, lname, major, credit_hours, gpa, id):

        self.__fname = fname
        self.__lname = lname
        self.__major = major
        self.__credit_hours = int(credit_hours)
        self.__gpa = float(gpa)
        self.__id = id
    #First name
    def get_fname(self):
        return self.__fname
    #Last name
    def get_lname(self):
        return self.__lname
    #major
    def get_major(self):
        return self.__major

    def set_major(self, new_major):
        self.__major = new_major

    #year
    def get_credit_hours(self):
        return self.__credit_hours

    def set_credit_hours(self, new_credit_hours):
        self.__credit_hours += new_credit_hours

    def get_class_level(self):
        if self.__credit_hours <= 30 and self.__credit_hours >= 0:
            class_level = "Freshman"
        elif self.__credit_hours >= 31 and self.__credit_hours <= 60:
            class_level = "Sophomore"
        elif self.__credit_hours >= 61 and self.__credit_hours <=90:
            class_level = "Junior"
        else:
            class_level = "Senior"
        return class_level
    
    #gpa
    def get_gpa(self):
        return self.__gpa

    def set_gpa(self, new_gpa):
        self.__gpa = new_gpa


    #id number
    def get_id(self):
        return self.__id
    #create get/set methods where appropriate
